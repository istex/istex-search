{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:jsTest"],
  "labels": ["renovate"],
  "reviewers": ["dreptin"],
  "enabledManagers": ["npm"],
  "prHourlyLimit": 8,
  "prConcurrentLimit": 8,
  "configMigration": true,
  "packageRules": [
    {
      "groupName": "React/Next.js",
      "matchPackageNames": [
        "@types/node",
        "react{/,}**",
        "next{/,}**",
        "@types/react{/,}**"
      ]
    },
    {
      "groupName": "TanStack",
      "matchPackageNames": ["@tanstack{/,}**"]
    },
    {
      "groupName": "MUI",
      "matchPackageNames": ["@emotion{/,}**", "@mui{/,}**"]
    }
  ]
}
